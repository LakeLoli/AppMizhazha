<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imageMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/message_item_margin"
        android:paddingTop="@dimen/message_item_margin"
        android:paddingBottom="@dimen/message_item_margin"
        android:src="@drawable/ic_action_picture"
        android:contentDescription="@string/image_description" />

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageMessage"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/message_item_margin"
        android:text="@string/mediem_text"/>

</RelativeLayout>
